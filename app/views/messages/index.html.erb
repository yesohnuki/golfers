<% @messages.each do |message| %>
  <div class="card">
    <div class="card-body">
      <div class="d-flex">
        <div class="chat-avatar">
          <div>
            <strong><%= User.find(message.sender_id).name %></strong>
            <%= message.body %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
