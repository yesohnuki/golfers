<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          <div class="mb-3">
            <h6 class="mb-2 text-muted">ユーザーネーム</h6>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
          <div class="mb-3">
            <h6 class="mb-2 text-muted">プロフィール画像</h6>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "w-100" %>
          </div>
          <%= f.submit "変更を保存",class:"btn btn-sm btn-success btn-block mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
