<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0"><strong>プロフィール編集</strong></h5>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          <div class="mb-3">
            <h6 class="mb-2 text-muted">プロフィール画像</h6>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "w-100" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="far fa-flag"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
          </div>
          <hr>
          <%= f.submit '変更を保存', class:"btn btn-lg btn-block btn-success mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
