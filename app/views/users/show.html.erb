  <!-- ユーザーの詳細 -->

  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ユーザー詳細</h5>
      <div class="form-body p-4">
      <div>
        <h3><%= @user.name %></h3>
        <%= image_tag @user.get_profile_image(100,100) %>
        <% if @user == current_user %>
          <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
        <% end %>
      </div>
      <div>
        <td>
          フォロー数：
          <%= link_to user_followings_path(user_id: @user.id) do %>
            <%= @user.followings.count %>
          <% end %>
        </td>
        <td>
          フォロワー数：
          <%= link_to user_followers_path(user_id: @user.id) do %>
            <%= @user.followers.count %>
          <% end %>
        </td>
         ｜
        <td>
          <% unless current_user == @user %>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
            <% end %>
          <% end %>
        </td>
      </div>

      <!-- ユーザーの投稿一覧 -->

<div class="card-list-container py-5">
  <% @golfcourses.each do |golfcourse| %>
  <div class="card mx-auto mt-4 shadow-lg">
    <%= link_to golfcourse_path(golfcourse.id) do %>
      <%= image_tag golfcourse.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag golfcourse.user.get_profile_image(100,100), class: 'img-fluid' %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(golfcourse_path(golfcourse.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= golfcourse.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= golfcourse.body %></p>
          <span><i class="fas fa-user"></i> By <%= golfcourse.user.name %> ｜ </span>
          <span><%= link_to "#{golfcourse.post_comments.count} コメント", golfcourse_path(golfcourse.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%#= paginate @golfcourse %>
</div>