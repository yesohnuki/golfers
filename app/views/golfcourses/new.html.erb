<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0"><strong>ゴルフ場投稿フォーム</strong></h5>
      <div class="form-body p-4">
        <% if @golfcourse.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @golfcourse.errors.count %>件のエラーが発生しました
            </h6>
            <% @golfcourse.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @golfcourse do |f| %>
          <div class="mb-3">
            <h6 class="mb-2 text-muted">ゴルフ場画像</h6>
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="far fa-flag"></i></span>
            </div>
            <%= f.text_field :title, class:"form-control", placeholder:"ゴルフ場名" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            <%= f.text_field :address, class:"form-control", placeholder:"住所" %>
          </div>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"ゴルフ場について" %>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>