<h2>タイトル</h2>
<p><%= @golfcourse.title %></p>

<h2>本文</h2>
<p><%= @golfcourse.body %></p>
<h2>画像</h2>
<% if @golfcourse.image.attached? %>
  <%= image_tag @golfcourse.image, size: "300x300" %>
<% else %>
  <%= image_tag 'golfcourse1', size: "300x300" %>
<% end %>

<%= link_to "編集", edit_golfcourse_path(@golfcourse.id) %>